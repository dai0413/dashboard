{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",
    "rootDir": "../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
