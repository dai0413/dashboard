{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2020",
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@myorg/shared": ["../shared/dist/index.d.ts"]
    }
  },
  "include": ["**/*.ts", "../shared/dist/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
